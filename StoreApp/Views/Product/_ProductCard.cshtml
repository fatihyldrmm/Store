@using Entities.Models
@model Product


<div class="col-sm-12 col-md-4 my-2">
    <div class="card" style="">

        <img src="@Model?.ImageUrl" class="card-img-top" alt="..." style="max-width: 100%; max-height: 140px;">

        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">

            </p>
            <div class="btn btn-group">
                <a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right"></i>
                    Details
                </a>
                <form id="@Model.ProductId" asp-page="/Cart" method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
                    <button type="submit" class="btn btn-outline-primary rounded-0">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>